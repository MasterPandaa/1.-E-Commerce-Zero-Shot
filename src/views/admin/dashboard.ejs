<%- include('partials/head', { title }) %>
<h1>Dashboard</h1>
<div class="stats">
  <div class="stat"><div class="label">Users</div><div class="value"><%= stats.users %></div></div>
  <div class="stat"><div class="label">Produk</div><div class="value"><%= stats.products %></div></div>
  <div class="stat"><div class="label">Orders</div><div class="value"><%= stats.orders %></div></div>
  <div class="stat"><div class="label">Pendapatan</div><div class="value">Rp <%= Number(stats.revenue).toLocaleString('id-ID') %></div></div>
</div>
<h2>Pendapatan 7 Hari Terakhir</h2>
<table class="table">
  <thead><tr><th>Tanggal</th><th>Pendapatan</th></tr></thead>
  <tbody>
    <% stats.revenueDaily.forEach(r => { %>
      <tr><td><%= r.d.toISOString ? r.d.toISOString().slice(0,10) : r.d %></td><td>Rp <%= Number(r.s).toLocaleString('id-ID') %></td></tr>
    <% }) %>
  </tbody>
</table>
<%- include('partials/footer') %>
